header-padding-normal = 15px
header-padding-max = 30px
logo-size = 40px

#header
  position: fixed
  left: 0
  right: 0
  top: 0
  z-index: 1
  padding: header-padding-normal 0
  background-color: color-theme
  display: none
  transition: .4s
  .mobile-nav-on &
    transform: translateX(mobile-nav-width)
  @media mq-mobile
    display: block

@media mq-mobile
  display: block
  #container
    padding-top: header-padding-normal * 2 + 20px

#header-inner
  display: flex
  height: 20px
  flex-flow: row nowrap
  align-items: center
  @media mq-mobile
    justify-content: center

#logo-wrap
  flex: 0 logo-size

#main-nav
  display: none
  flex: 1 auto
  padding-left: 20px
  text-align: right
  @media mq-normal
    display: block

.main-nav-link
  color: #fff
  text-decoration: none
  line-height: logo-size
  opacity: 0.7
  transition: 0.2s
  font-family: font-title
  display: inline-block
  padding: 0 15px
  &:hover
    opacity: 1
    color: color-link-hover

#lang-select-wrap
  display: none
  position: relative
  @media mq-normal
    display: block

#lang-select-label
  color: #fff
  opacity: 0.7
  font-family: font-title
  line-height: logo-size
  span
    padding-left: 8px
  i
    opacity: 0.7

#lang-select
  opacity: 0
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  -webkit-appearance: menulist-button
  font-size: inherit
