global-reset()

html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

button
input[type="reset"]
input[type="button"]
input[type="submit"]
  &::-moz-focus-inner
    padding: 0
    margin: 0
    border: 0

input, button, select
  margin: 0
  padding: 0
  border: 0

html, body
  @media screen
    overflow-x: hidden

body
  font-size: font-size
  font-family: font-sans
  color: color-default
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  position: relative

.wrapper
  clearfix()
  @media screen
    margin: 0 auto

.inner
  clearfix()
  @media screen
    padding: 0 gutter-width
  @media mq-mobile
    padding: 0 mobile-gutter-width

#content-wrap
  background: #fff
