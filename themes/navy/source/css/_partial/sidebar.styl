search-height = 30px
search-icon-width = 40px
lang-select-height = 40px

#sidebar
  position: fixed
  top: 0
  width: mobile-nav-width
  left: 0
  height: 100%
  background: color-theme
  transition: transition-duration
  font-family: font-title
  @media mq-mobile
    display: none

.sidebar-header
  border-bottom: 1px solid #444
  padding: 18px 0

#logo
  height: logo-size
  display: block
  padding: 0 15px

.logo-image
  height: logo-size
  background-size: contain
  background-position: center
  background-repeat: no-repeat
  display: inline-block
  vertical-align: middle
  margin-right: 10px

.logo-text
  color: white
  display: inline-block
  vertical-align: middle
  font-size: 26px

#search-input-wrap
  position: relative
  width: sidebar-width - 15px * 2
  margin: 0 auto
  height: search-height
  line-height: search-height
  background-color: rgba(255, 255, 255, .1)
  border-radius: search-height * 0.5

#search-input-wrap .algolia-autocomplete
  width: 100%
  height: 100%

#search-input-icon
  color: #fff
  position: absolute
  display: inline-block
  opacity: 0.7
  width: search-icon-width
  text-align: center
  pointer-events: none

#search-input
  background: none
  font-size: inherit
  font-family: font-title
  color: #fff
  outline: none
  width: sidebar-width
  height: 100%
  padding-left: search-icon-width - 5px
  box-sizing: border-box
  border: none

#sidebar-inner
  overflow-y: auto
  padding-bottom: 10px
  position: absolute
  top: logo-size + search-height + 10px + 1px
  bottom: lang-select-height
  left: 0
  right: 0
  -webkit-overflow-scrolling: touch

.sidebar-title
  color: color-link
  font-weight: bold
  padding: 10px 15px
  line-height: 1
  display: block
  border-top: 1px solid #444
  margin-top: 10px
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

.sidebar-title:first-child {
  border-top: none
}

.sidebar-link
  color: #fff
  text-decoration: none
  display: block
  padding: 10px 15px 10px 30px
  line-height: 1
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
  &.current
    background-color: rgba(255, 255, 255, .1)

#lang-select-wrap
  position: absolute
  bottom: 0
  left: 0
  width: 100%
  background: color-theme
  border-top: 1px solid #444

#lang-select-label
  line-height: lang-select-height
  color: #fff
  padding: 10px 15px
  i
    opacity: 0.7
  span
    padding-left: 8px

#lang-select
  -webkit-appearance: menulist-button
  opacity: 0
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
