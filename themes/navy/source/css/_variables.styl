// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
color-default = #444
color-gray = #999
color-border = #e3e3e3
color-theme = #3d4045
color-link = #0e83cd
color-link-hover = lighten(color-link, 10%)

// Typography
font-sans = 'Helvetica Neue', Arial, "Pingfang SC","Lantinghei SC","Microsoft JhengHei","Microsoft YaHei","Hiragino Sans GB","WenQuanYi Micro Hei",sans-serif
font-serif = Garamond, Georgia, "Times New Roman", serif
font-mono = "Source Code Pro", Monaco, Menlo, Consolas, monospace
font-title = Lato, font-sans
font-size = 16px
line-height = 1.618em

// Layout
max-width = 1200px
gutter-width = 50px
mobile-gutter-width = 20px
sidebar-width = 260px
mobile-nav-width = 260px

// Media queries
mq-mobile = "screen and (max-width: 768px)"
mq-normal = "screen and (min-width: 769px)"
mq-tablet = "screen and (min-width: 480px)"
